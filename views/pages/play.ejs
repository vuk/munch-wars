<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body>
<div class="star-field">
    <div id='stars'></div>
    <div id='stars2'></div>
    <div id='stars3'></div>
</div>
<div class="container">
    <header>
        <% include ../partials/header.ejs %>
    </header>

    <main>
        <div class="row title-row">
            <div class="col-xs-1"></div>
            <div class="col-xs-3 hide-on-go">
                <span id="left-score" class="score">0</span>
                <span id="left-rank"></span>
                <span class="name-label" id="left-name"></span>
            </div>
            <div class="col-xs-4 logo"><img src="/assets/logo.png" alt="" class="hide-on-mobile"></div>
            <div class="col-xs-3 hide-on-go">
                <span id="right-score" class="score">0</span>
                <span id="left-rank"></span>
                <span class="name-label" id="right-name"></span>
            </div>
            <div class="col-lg-1"></div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="game-container">
                    <div id="munch-pong"></div>
                    <div id="game-over">
                        <div class="row title-row">
                            <div class="col-xs-4">
                                <span id="left-score-go" class="score">0</span>
                                <span id="left-rank-go"></span>
                                <span class="name-label" id="left-name-go"></span>
                            </div>
                            <div class="col-xs-4 logo"><div class="go-label">GAME<br/>OVER</div></div>
                            <div class="col-xs-4">
                                <span id="left-rank-go"></span>
                                <span class="name-label" id="right-name-go"></span>
                                <span id="right-score-go" class="score">0</span>
                            </div>
                        </div>
                        <div class="row go-buttons">
                            <div class="col-sm-6">
                                <a href="javascript:window.location.href=window.location.href" type="button" class="reset-btn">
                                    igraj ponovo
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <a href="/" class="reset-btn">
                                    glavni meni
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-1"></div>
        </div>
    </main>

    <footer>
        <div id="games"></div>
        <div id="turn">
            <p>Igra počinje uskoro</p>
            <img src="/assets/turn.png" alt="">
            <p>Okrenite uređaj horizontalno</p>
        </div>
        <script>
          var opponent = <%- JSON.stringify(opponentId) %>;
          var profile = <%- JSON.stringify(profile) %>;
          var noevent = <%- JSON.stringify(noevent) %>;
          var computer = <%- JSON.stringify(computer) %>;
          var stats = <%- JSON.stringify(stats) %>;
        </script>
        <% include ../partials/footer.ejs %>
    </footer>
</div>

</body>
</html>